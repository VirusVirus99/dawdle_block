{
	"ignorePatterns": "libraries/*",
	"env": {
		"webextensions": true,
		"jquery": true,
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"never"
		],
		"no-unused-vars": [
			"error",
			{
				"argsIgnorePattern": "^_"
			}
		],
		"consistent-return": "error",
		"eqeqeq": [
			"error",
			"always"
		],
		"camelcase": "error"
	}
}